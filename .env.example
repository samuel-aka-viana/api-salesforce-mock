# =============================================================================
# MARKETING CLOUD API - VARIÁVEIS DE AMBIENTE
# =============================================================================

# -----------------------------------------------------------------------------
# Flask Application Settings
# -----------------------------------------------------------------------------
FLASK_ENV=development
SECRET_KEY=marketing-cloud-super-secret-key-2024-production
JWT_SECRET=jwt-ultra-secret-key-for-marketing-cloud-2024
API_PORT=5000

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_DB=marketing_cloud_db
POSTGRES_USER=marketing_user
POSTGRES_PASSWORD=marketing_secure_password_2024
DATABASE_URL=postgresql://marketing_user:marketing_secure_password_2024@localhost:5432/marketing_cloud_db

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_PASSWORD=redis_secure_password_2024
REDIS_URL=redis://:redis_secure_password_2024@localhost:6379/0

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,txt,html,mp4,mp3

# -----------------------------------------------------------------------------
# Rate Limiting Configuration
# -----------------------------------------------------------------------------
RATELIMIT_STORAGE_URL=redis://:redis_secure_password_2024@localhost:6379/1
RATELIMIT_DEFAULT_LIMITS=1000 per hour,100 per minute

# -----------------------------------------------------------------------------
# Email Configuration (para futuras integrações)
# -----------------------------------------------------------------------------
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=your_email@gmail.com

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=./logs/marketing_cloud.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_TITLE=Marketing Cloud API Clone
API_VERSION=1.0.0
API_DESCRIPTION=Salesforce Marketing Cloud REST API simulation
API_CONTACT_EMAIL=admin@marketingcloud.local
API_LICENSE_NAME=MIT
API_LICENSE_URL=https://opensource.org/licenses/MIT

# -----------------------------------------------------------------------------
# Pagination Configuration
# -----------------------------------------------------------------------------
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# -----------------------------------------------------------------------------
# Cache Configuration
# -----------------------------------------------------------------------------
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://:redis_secure_password_2024@localhost:6379/2
CACHE_DEFAULT_TIMEOUT=300

# -----------------------------------------------------------------------------
# Monitoring and Health Check
# -----------------------------------------------------------------------------
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics
ENABLE_METRICS=true

# -----------------------------------------------------------------------------
# PgAdmin Configuration (opcional)
# -----------------------------------------------------------------------------
PGADMIN_EMAIL=admin@marketingcloud.local
PGADMIN_PASSWORD=pgadmin_secure_password_2024

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=marketing-cloud-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# -----------------------------------------------------------------------------
# External API Integrations (futuras)
# -----------------------------------------------------------------------------
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_SANDBOX_URL=https://test.salesforce.com

SENDGRID_API_KEY=your_sendgrid_api_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
DEBUG=true
TESTING=false
DEVELOPMENT_SERVER=true

# -----------------------------------------------------------------------------
# Production Settings (descomente para produção)
# -----------------------------------------------------------------------------
# FLASK_ENV=production
# DEBUG=false
# TESTING=false
# DEVELOPMENT_SERVER=false
# SSL_CERT_PATH=/etc/ssl/certs/marketing_cloud.crt
# SSL_KEY_PATH=/etc/ssl/private/marketing_cloud.key

# -----------------------------------------------------------------------------
# Docker Settings
# -----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=marketing_cloud
COMPOSE_FILE=docker-compose.yml

# -----------------------------------------------------------------------------
# Timezone Configuration
# -----------------------------------------------------------------------------
TZ=America/Sao_Paulo
TIMEZONE=America/Sao_Paulo

# -----------------------------------------------------------------------------
# Fake Data Generation
# -----------------------------------------------------------------------------
FAKER_LOCALE=pt_BR,en_US
FAKER_SEED=42
DEFAULT_CONTACT_COUNT=10000
DEFAULT_CAMPAIGN_COUNT=500
DEFAULT_EMAIL_DEFINITION_COUNT=1000
DEFAULT_DATA_EVENT_COUNT=2000
DEFAULT_ASSET_COUNT=500

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------
WORKERS=4
WORKER_CLASS=gevent
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
TIMEOUT=30
KEEPALIVE=2

# -----------------------------------------------------------------------------
# Session Configuration
# -----------------------------------------------------------------------------
SESSION_TYPE=redis
SESSION_REDIS_URL=redis://:redis_secure_password_2024@localhost:6379/3
SESSION_PERMANENT=false
SESSION_USE_SIGNER=true
SESSION_KEY_PREFIX=marketing_cloud:
PERMANENT_SESSION_LIFETIME=7200

# -----------------------------------------------------------------------------
# Celery Configuration (para tasks assíncronas futuras)
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://:redis_secure_password_2024@localhost:6379/4
CELERY_RESULT_BACKEND=redis://:redis_secure_password_2024@localhost:6379/5
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=America/Sao_Paulo

# -----------------------------------------------------------------------------
# Webhook Configuration
# -----------------------------------------------------------------------------
WEBHOOK_SECRET=webhook_secret_key_2024
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_COUNT=3
WEBHOOK_RETRY_DELAY=5

# -----------------------------------------------------------------------------
# Analytics Configuration
# -----------------------------------------------------------------------------
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token
SEGMENT_WRITE_KEY=your_segment_write_key

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_API_DOCS=true
ENABLE_SWAGGER_UI=true
ENABLE_BULK_OPERATIONS=true
ENABLE_WEBHOOKS=false
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# -----------------------------------------------------------------------------
# Custom API Clients (para simulação)
# -----------------------------------------------------------------------------
API_CLIENT_1_ID=marketing_cloud_app_1
API_CLIENT_1_SECRET=super_secret_key_123
API_CLIENT_1_NAME=Marketing Cloud Integration

API_CLIENT_2_ID=analytics_dashboard
API_CLIENT_2_SECRET=analytics_secret_456
API_CLIENT_2_NAME=Analytics Dashboard

API_CLIENT_3_ID=mobile_app_client
API_CLIENT_3_SECRET=mobile_secret_789
API_CLIENT_3_NAME=Mobile Application